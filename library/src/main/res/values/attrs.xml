<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Stepper">
        <attr name="stepperTitle" format="string"/>
        <attr name="stepperSubtitle" format="string"/>
        <attr name="stepperStepText" format="string"/>
        <attr name="stepperCompleted" format="boolean"/>
        <attr name="stepperActive" format="boolean"/>
        <attr name="stepperAccent" format="color"/>
        <attr name="stepperError" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="StepperLayout">
        <attr name="stepperLayoutOrientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="stepperLayoutMargin" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="StepperProgressLayout">
        <attr name="stepperMaxProgress" format="integer"/>
        <attr name="stepperProgress" format="integer"/>
        <attr name="stepperBackButtonText" format="string"/>
        <attr name="stepperNextButtonText" format="string"/>
        <attr name="steeperFinishButtonText" format="string"/>
        <attr name="stepperProgressType" format="enum">
            <enum name="text" value="0"/>
            <enum name="dots" value="1"/>
            <enum name="bar" value="2"/>
        </attr>
        <attr name="stepperProgressAccent" format="color"/>
    </declare-styleable>
</resources>