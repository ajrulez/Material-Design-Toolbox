<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignEnd="@+id/stepperLayout"
            android:layout_alignLeft="@+id/stepperLayout"
            android:layout_alignRight="@+id/stepperLayout"
            android:layout_alignStart="@+id/stepperLayout"
            android:layout_centerVertical="true"
            android:background="@color/nh_grey_400"/>

        <LinearLayout
            android:id="@+id/stepperLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.nasahapps.materialdesigntoolbox.components.Stepper
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:stepperAccent="@color/nh_indigo_500"
                app:stepperCompleted="true"
                app:stepperStepText="1"
                app:stepperTitle="Select campaign settings"/>

            <com.nasahapps.materialdesigntoolbox.components.Stepper
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginStart="56dp"
                android:orientation="horizontal"
                app:stepperAccent="@color/nh_indigo_500"
                app:stepperActive="true"
                app:stepperStepText="2"
                app:stepperSubtitle="Optional"
                app:stepperTitle="Create an ad group"/>

            <com.nasahapps.materialdesigntoolbox.components.Stepper
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginStart="56dp"
                android:orientation="horizontal"
                app:stepperAccent="@color/nh_indigo_500"
                app:stepperStepText="3"
                app:stepperTitle="Create an ad"/>

        </LinearLayout>

    </RelativeLayout>

</HorizontalScrollView>