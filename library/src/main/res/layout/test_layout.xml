<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.nasahapps.materialdesigntoolbox.components.BottomNavigationBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.nasahapps.materialdesigntoolbox.components.BottomNavigationTab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bottomNavTabIcon="@drawable/ic_na_test_history"
            app:bottomNavTabText="Recents"/>

        <com.nasahapps.materialdesigntoolbox.components.BottomNavigationTab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bottomNavTabIcon="@drawable/ic_na_test_favorite"
            app:bottomNavTabText="Favorites"/>

        <com.nasahapps.materialdesigntoolbox.components.BottomNavigationTab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bottomNavTabIcon="@drawable/ic_na_test_location"
            app:bottomNavTabText="Nearby"/>

        <com.nasahapps.materialdesigntoolbox.components.BottomNavigationTab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bottomNavTabIcon="@drawable/ic_na_test_movie"
            app:bottomNavTabText="Movies"/>

        <com.nasahapps.materialdesigntoolbox.components.BottomNavigationTab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bottomNavTabIcon="@drawable/ic_na_test_music"
            app:bottomNavTabText="Music"/>

    </com.nasahapps.materialdesigntoolbox.components.BottomNavigationBar>

</FrameLayout>