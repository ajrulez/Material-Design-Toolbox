<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?attr/selectableItemBackground"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/bottom_sheet_list_padding"
              android:paddingRight="@dimen/bottom_sheet_list_padding">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/bottom_sheet_list_icon_size"
        android:layout_height="@dimen/bottom_sheet_list_icon_size"
        android:layout_marginEnd="@dimen/bottom_sheet_list_padding"
        android:layout_marginRight="@dimen/bottom_sheet_list_padding"
        tools:src="@drawable/ic_na_test_favorite"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_sheet_list_padding"
        android:layout_marginLeft="@dimen/bottom_sheet_list_padding"
        android:layout_marginStart="@dimen/bottom_sheet_list_padding"
        android:layout_marginTop="@dimen/bottom_sheet_list_padding"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/bottom_sheet_text_color"
        android:textSize="@dimen/bottom_sheet_text_size"
        tools:text="Favorite"/>

</LinearLayout>