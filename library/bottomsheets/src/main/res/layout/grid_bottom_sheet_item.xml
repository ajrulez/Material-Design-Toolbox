<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="8dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/bottom_sheet_grid_icon_size"
        android:layout_height="@dimen/bottom_sheet_grid_icon_size"
        tools:src="@drawable/ic_na_test_favorite"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_sheet_grid_left_right_bottom_padding"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/bottom_sheet_text_size"
        tools:text="Favorite"/>

</LinearLayout>